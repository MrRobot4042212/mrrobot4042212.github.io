---
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}


const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="../styles/global.ccs">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<ViewTransitions/>
	</head>
	<body id="root">
		<Header/>
		<main>
			<slot name="before"/>
			<slot/>
		</main>
		<Footer/>
	</body>
</html>
<style is:global>
	
	html{
		font-family: 'montserrat';
		scroll-behavior: smooth;
	}
	body{
		position: relative;
		background-color: #101720;
		display: flex;
		flex-direction: column;
		row-gap: 50px;
		margin: 0;
        padding-top: 100vh;
	}
	main{
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		justify-items: center;
		align-items: center;
		justify-content: space-around;
		row-gap: 50px;
	}
	.cronological-content{
        display: flex;
        flex-direction: column;
        width: 100%;
        align-items: center;
        justify-content: space-evenly;
        align-content: center;
        flex-wrap: wrap;
        position: relative;
    }
	.cronological-content a{
		text-decoration: none;
		background: transparent;
        border-radius: 10px;
        padding: 5px;
        border: 2px #4e7ea9 solid;
        cursor: pointer;
        transition: all 0.3s linear;
        max-width: 150px;
        margin-right: 5px;
	}

	.cronological-content a:hover{
        transform: scale(1.05);
        background-color:#4e7ea9 ;
    
	}

	#sublinks-content{
		display: flex;
		justify-content: flex-start;
		align-items: center;
		flex-wrap: wrap;
		align-content: center;
	}


	.cronological-content h1{
		color: #4e7ea9;
		font-size: 40px;
		text-align: center;
	}
	.imgIcons{
		width: 50px;
		height: 50px;
		object-fit: cover;
		border-radius: 50%;
		margin-bottom: 10px;
		transform: translateX(-25px);
	}
	.right-column{
		display: flex;
		margin-left: 10px;
		flex-direction: column;
	}
	.main-content{
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		align-content: center;
		justify-content: center;
		align-items: center;
		width: 100%;
		padding: 100px 0px;
		background-color: #172231;

	}
	.main-content nav{
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		align-content: center;
		justify-content: center;
		align-items: center;
	}
	.container{
		display: flex;
		flex-direction: column;
	}
	.container article{
		display: flex;
		flex-direction: row;
		position: relative;
		margin: 0px 25px;
		column-gap: 20px;
		justify-content: flex-start;
		align-content: center;
		flex-wrap: wrap;
		padding-bottom: 30px;
	}
	.right-column p{
		width:100%;
	}
	.container h2{
		color: #4e7ea9;
		max-width: 700px;
		margin: 0;
	}
	.container p{
		color: #cedce9;
		max-width: 700px;
	}
	.container footer{
		color: rgb(206, 220, 233,0.5);
		font-size: 400;
		font-style: italic;
	}
	.container article::before{
		content: "";
		position: absolute;
		left: 0;
		top: 0;
		bottom: 0;
		width: 2px;
		z-index: 0;
	}



    .main-content button{
        background: transparent;
        border-radius: 10px;
        padding: 5px;
        border: 2px #4e7ea9 solid;
        cursor: pointer;
        transition: all 0.3s linear;
        max-width: 200px;
        margin-right: 5px;
    }
    .main-content button:hover   {
        transform: scale(1.05);
        background-color:#4e7ea9 ;
    }
	.main-content nav{
		gap: 10px;
		width: 100%;
	}
	.main-content nav *{
		font-family: 'montserrat';
		color:#fff ;
		font-size: 15px;
	}

	@keyframes centerLeft {
            from{
            opacity: 1;
        }
        50%{
            opacity: 0.2;
        }
        95%{
            width: fit-content;
            height: fit-content;
            transform: translateX(-1200px);

        }
        100%{
            width: 0;
            height: 0;
            opacity:0 ;
        }
    }

    @keyframes centerRight {
        from{
            opacity: 1;
        }
        50%{
            opacity: 0.2;
        }
        95%{
            width: fit-content;
            height: fit-content;
            transform: translateX(1200px);
        }
        100%{
            width: 0;
            height: 0;
            opacity:0 ;
        }
    }

	#Indra::before {
		background: linear-gradient(to bottom,#fff, #12436d );
	}
	#Infibail::before{
		background: linear-gradient(to bottom, #12436d,#12436d ,#083b4f  );
	}
	#UEM::before{
		background: linear-gradient(to bottom, #fe3227,#fe3227 ,#fff  );
	}
	#SMA::before{
		background: linear-gradient(to bottom, #fff ,#242424 );
	}
	#SAE::before{
		background: linear-gradient(to bottom,#242424,#242424, #f2cf3d);
	}
	#ART::before{
		background: linear-gradient(to bottom, #f2cf3d,#f2cf3d, #fff);
	}
	#HRV::before{
		background: linear-gradient(to bottom, #ae8c38,#ae8c38, #00bceb);
	}
	#CISCO::before{
		background: linear-gradient(to bottom, #00bceb, #00bceb);
	}
	#MRB::before{
		background: linear-gradient(to bottom, #d08e5c,#d08e5c, #00ce64);
	}
	#PP::before{
		background: linear-gradient(to bottom, #00ce64,#00ce64, #1e0509);
	}
	#HN::before{
		background: linear-gradient(to bottom,#1e0509,#1e0509,#dc0746);
	}
	#FNC::before{
		background: linear-gradient(to bottom,#dc0746,#fff);
	}
	#FRONT::before{
		background: linear-gradient(to bottom,#ffcb66,#ffcb66,#77d7ac);
	}
	#BACK::before{
		background: linear-gradient(to bottom,#77d7ac,#1a6283);
	}
	#SO::before{
		background: linear-gradient(to bottom,#1a6283,#1a6283,#df7e45);
	}
	#MS::before{
		background: linear-gradient(to bottom,#df7e45,#df7e45,#fff );

	}

</style>


        



