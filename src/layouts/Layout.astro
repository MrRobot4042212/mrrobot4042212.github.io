---
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    </head>
    <body id="root">
        <Header/>
        <main>
            <slot name="before"/>
            <slot/>
        </main>
    </body>
</html>
<style is:global>
    @font-face {
	font-family: 'Satoshi-Variable';
	src: url('../fonts/Satoshi-Variable.woff2') format('woff2'),
        url('../fonts/Satoshi-Variable.woff') format('woff'),
        url('../fonts/Satoshi-Variable.ttf') format('truetype');
	font-weight: 300 900;
	font-display: swap;
	font-style: normal;
}
    :root{
        --background:rgb(16, 16, 14,0.9);
        --alterBackground:#10100e;
        --title:#8e8964;
        --text:#f6f6f6;
    }
    html {
        scroll-behavior: smooth;
        font-family: "Satoshi-variable";
    }
    body {
    position: relative;
    background-color: var(--background);
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    row-gap: 50px;
    margin: 0;
    align-items: flex-start;
    justify-content: flex-start;
    }
    main {
        flex: 1;
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        justify-items: center;
        align-items: center;
        justify-content: space-around;
        row-gap: 50px;
        position: relative;
        background-color: var(--alterBackground);
        z-index: 1;
    }
    main::after{
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('/image/163.jpg') no-repeat center ;
        background-size: cover;
        opacity: 0.1;
        filter: blur(5px);
        z-index: -1;
    }
    .cronological-content {
        display: flex;
        flex-direction: column;
        width: 100%;
        align-items: center;
        justify-content: space-evenly;
        align-content: center;
        flex-wrap: wrap;
        position: relative;
    }
    .cronological-content a {
        text-decoration: none;
        background: transparent;
        padding: 5px;
        border: 2px var(--title) solid;
        cursor: pointer;
        transition: all 0.3s linear;
        max-width: 150px;
        margin-right: 5px;
    }
    .cronological-content a:hover {
        transform: scale(1.05);
        background-color: var(--text);
        color: var(--background);
    }
    #sublinks-content {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        flex-wrap: wrap;
        align-content: center;
    }
    .cronological-content h1 {
        color: var(--title);
        font-size: 40px;
        text-align: center;
    }
    .imgIcons {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 10px;
        transform: translateX(-25px);
    }
    .right-column {
        display: flex;
        margin-left: 10px;
        flex-direction: column;
    }
    .main-content {
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        align-content: center;
        justify-content: center;
        align-items: center;
        width: 100%;
        padding: 100px 0;
        background-color: var(--alterBackground);
    }
    .main-content nav {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-content: center;
        justify-content: center;
        align-items: center;
        gap: 10px;
        width: 100%;
    }
    .main-content nav * {
        color: var(--text);
        font-size: 15px;
    }
    .container {
        display: flex;
        flex-direction: column;
    }
    .container article {
        display: flex;
        flex-direction: row;
        position: relative;
        margin: 0 30px;
        column-gap: 20px;
        flex-wrap: nowrap;
        padding-bottom: 30px;
        justify-content: flex-start;
    }
    .right-column p {
        width: 100%;
    }
    .container h2 {
        color: var(--title);
        max-width: 700px;
        margin: 0;
        font-size: 30px;
        text-decoration: underline var(--title); 
    }
    .container h3 {
        color: var(--title);
        font-style: italic;
        max-width: 700px;
        margin: 0;
        font-size: 25px;
    }
    .container p {
        color: var(--text);
        opacity: 0.7;
        max-width: 700px;
        font-size: 20px;
    }
    .container footer {
        color: var(--text);
        font-size: 400;
        font-style: italic;
    }
    .container article::before {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 2px;
        z-index: 0;
    }
    .main-content button {
        background: transparent;
        font-size: 16px;
        padding: 10px;
        border: none;
        cursor: pointer;
        transition: background-position  0.5s linear;
        transition: color 1s linear;
        max-width: 200px;
        margin-right: 5px;
        background-position: 0 0;
    }
    .main-content button:hover {
        transform: scale(1.05);
        color: #10100e;
        background: linear-gradient(to top, var(--title) 50%, transparent 50%);
        background-size: 100% 200%;
        background-position: 0 100%;
        border: none;
        text-decoration: none;
        transition: background-position 0.5s ease-in-out;
    }
    .main-content button:active {
        border: none;
    }
    #Geopost::before {
        background: linear-gradient(to bottom, #e10033, #111111, #fff);
    }
    #Indra::before {
        background: linear-gradient(to bottom, #fff, #12436d);
    }
    #Infibail::before {
        background: linear-gradient(to bottom, #12436d, #12436d, #083b4f);
    }
    #UEM::before {
        background: linear-gradient(to bottom, #fe3227, #fe3227, #fff);
    }
    #SMA::before {
        background: linear-gradient(to bottom, #fff, #242424);
    }
    #SAE::before {
        background: linear-gradient(to bottom, #242424, #242424, #f2cf3d);
    }
    #ART::before {
        background: linear-gradient(to bottom, #f2cf3d, #f2cf3d, #fff);
    }
    #HRV::before {
        background: linear-gradient(to bottom, #ae8c38, #ae8c38, #00bceb);
    }
    #CISCO::before {
        background: linear-gradient(to bottom, #00bceb, #00bceb);
    }
    #MRB::before {
        background: linear-gradient(to bottom, #d08e5c, #d08e5c, #00ce64);
    }
    #PP::before {
        background: linear-gradient(to bottom, #00ce64, #00ce64, #1e0509);
    }
    #HN::before {
        background: linear-gradient(to bottom, #1e0509, #1e0509, #dc0746);
    }
    #FNC::before {
        background: linear-gradient(to bottom, #dc0746, #fff);
    }
    #FRONT::before {
        background: linear-gradient(to bottom, #ffcb66, #ffcb66, #77d7ac);
    }
    #BACK::before {
        background: linear-gradient(to bottom, #77d7ac, #1a6283);
    }
    #SO::before {
        background: linear-gradient(to bottom, #1a6283, #1a6283, #df7e45);
    }
    #MS::before {
        background: linear-gradient(to bottom, #df7e45, #df7e45, #fff);
    }
    #JC::before {
        background: linear-gradient(to bottom, #5333d2, #5333d2, #f2cf3d);
    }
    #JC::before {
        background: linear-gradient(to bottom, #5333d2, #5333d2, #f2cf3d);
    }
</style>