<style>
    @media (max-width:768px) {
        header{
            position: relative;
        }
        .navHamburger{
    position: fixed;
    margin: 30px;
    top: 0;
    left: 0;
    z-index: 10;
    }
    #menuToggle
    {
        display: block;
        position: relative;
        z-index: 10; 
        -webkit-user-select: none;
        user-select: none;
        bottom: 0;
        top: 0;
    }
    #menuToggle a
    {
        text-decoration: none;
        color: var(--text);
        transition: color 0.3s ease;
    }
    
    #menuToggle a:hover
    {
        color: rgb(242, 102, 41);
        text-decoration:line-through;
        scale: 1.05;
        transition: all 0.5s ease;
        
    
    }
    
    #menuToggle input
    {
        display: block;
        width: 40px;
        height: 32px;
        position: absolute;
        top: -7px;
        left: -5px;
        cursor: pointer;
        opacity: 0;
        z-index: 2; 
        -webkit-touch-callout: none;
    }
    #menuToggle span
    {
        display: block;
        width: 33px;
        height: 4px;
        margin-bottom: 5px;
        position: relative;
        background: var(--text);
        border-radius: 3px;
        z-index: 1;
        transform-origin: 4px 0px;
        
        transition: transform 0.5s cubic-bezier(0.77,0.2,0.05,1.0),
                    background 0.5s cubic-bezier(0.77,0.2,0.05,1.0),
                    opacity 0.55s ease;
    }
    
    #menuToggle span:first-child
    {
        transform-origin: 0% 0%;
    }
    
    #menuToggle span:nth-last-child(2)
    {
        transform-origin: 0% 100%;
    }
    #menuToggle input:checked ~ span
    {
        opacity: 1;
        transform: rotate(45deg) translate(-2px, -1px);
        background: var(--text);
    }
    #menuToggle input:checked ~ span:nth-last-child(3)
    {
        opacity: 0;
        transform: rotate(0deg) scale(0.2, 0.2);
    }
    
    #menuToggle input:checked ~ span:nth-last-child(2)
    {
        transform: rotate(-45deg) translate(0, -1px);
    }
    #menu
    {
        display: flex;
        flex-direction: column;
        position: absolute;
        height: 100vh;
        margin: -100px 0 0 -50px;
        padding: 150px 50px;
        background: var(--background);
        backdrop-filter: blur(10px);
        border-radius: 8px;
        list-style-type: none;
        -webkit-font-smoothing: antialiased;
        transform-origin: 0% 0%;
        transform: translate(-100%, 0);
        transition: transform 0.5s cubic-bezier(0.77,0.2,0.05,1.0);
        border: 2px rgb(128, 128, 128, 0.6) solid;
        justify-content: flex-start;
    }
    #menu li
    {
        padding: 10px;
        font-size: 30px;
    }
    
    #menuToggle input:checked ~ ul
    {
        transform: none;
    }
        
    }
    @media (min-width: 769px) {
        header{
            position: sticky;
            top: 0;
        }
        .navHamburger{
            display: none;
        }
    }
    header {
        display: flex;
        flex-wrap: wrap;
        align-content: center;
        align-items: center;
        z-index: 10;
        flex-direction: column;
        justify-content: space-evenly;
        transition: transform 0.3s ease-in-out;
        margin: 0 20px;

    }
    header aside {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        width: 100%;
        flex-wrap: wrap;
        background: transparent;
    }
    .hd-name {
        color: var(--title);
        font-weight: bold;
        font-size: 30px;
        text-align: center;

    }
    .bio-avatar{
        width: 200px;
        height: 200px;
        border-radius: 50%;
        object-fit: cover;
    }

    .hd-tittle {
        color: var(--text);
        opacity: 0.7;
        font-weight: 400;
        max-width: 60rem;
        font-size: 20px;
        text-align: center;
    }
    .hd-media-icons {
        display: flex;
        flex-direction: row;
        align-items: center;
        width: 100%;
        justify-content: center;
        column-gap: 50px;
        z-index: 2;
    }
    .hidden {
        transform: translateY(-100%);
    }

    image{
        object-fit: contain-;
    }

    header #buttons {
        z-index: 10;
    }

    
</style>

