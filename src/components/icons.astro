---
const { url , download, socialName } = Astro.props;
---
        <span class="media-button">
            <a class="link-media-icon" href={url} download={download} target="_blank">
                <h4
                    class="name-media-icon"
                >
                    {socialName}
                </h4>
                <span class="img-media-icon">
                    <slot class="svg" name="hd-svg"/>
                </span>
            </a>
        </span>

<style>
    
.name-media-icon {
    color: #fff;
    font-weight: 400;
    font-size: 15px;
    transition: all 0.2s linear;
    font-size: 20px;
}
.img-media-icon {
    color: #fff;
    transition: all 0.5s linear; 
}
.link-media-icon{
    display: flex;
    flex-direction: column;
    align-content: center;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
}
.media-button{
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        z-index: 10;
}
.media-button :hover *{
    transform: scale(1.05);
    color:#8e8964 ;
}

a{
    text-decoration: none;
}
</style>