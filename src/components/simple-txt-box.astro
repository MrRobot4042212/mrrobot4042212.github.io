---
const { title, parrafo, idBox } = Astro.props;
---

<article id={idBox} class="main-simple-boxes">
    <span>
        <slot name="svg"/>
        <h1>{title}</h1>
    </span>
    <aside>
        <p>{parrafo}</p>
    </aside>
</article>

<style>

    @media (max-width: 768px) {
        span{
            flex-direction: column;
            row-gap: 30px;
        }
        
    }
    .main-simple-boxes {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 50px;
        max-width: 950px;
        border-radius: 10px;
        margin-top: 30px;
        border: #fff solid 2px;
    }

    aside {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        column-gap: 30px;
        flex-wrap: wrap;
        width: 100%;
    }

    span {
        display: flex;
        align-items: center;
        justify-content: center;
        column-gap: 30px;
        flex-wrap: wrap;
        width: fit-content
    }

    aside * {
        margin: 10px;
    }

    #objetive {
        background: none;
    }

    h1 {
        color: var(--title);
        font-size: 40px;
        overflow: hidden;
        border-right: .1em solid #fff;
        white-space: nowrap;
        padding-right: 10px;
        animation: blink-caret 1s step-end infinite;
    }

    p {
        color: var(--text);
        font-size: 22px;
        text-align: start;
    
        

        view-timeline-name: --revealing-txt;
        view-timeline-axis: block;

        animation: linear reveal both;
        animation-timeline: --revealing-txt;

        animation-range: entry 15% cover 25%; 
    }

    @keyframes reveal {
        from {
            opacity: 0;
        }
        to{
            opacity: 1;
        }
    }

    @keyframes blink-caret {
        from, to { border-color: transparent; }
        50% { border-color: #fff; }
    }
</style>