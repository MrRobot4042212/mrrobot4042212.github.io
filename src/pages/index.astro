---
import BioArticle from '../components/simple-txt-box.astro'
import Layout from '../layouts/Layout.astro';
import Buttons from '../components/buttons.astro'
import DynamicContent from '../components/dynamicContent.jsx';
import Image from "astro/components/Image.astro"
import BioAvatar from '../../public/image/avatar_bio.webp'
import objetiveAvatar from '../../public/image/avatar.webp'
import svgBio from '../../public/image/avatar.svg'
---

<Layout title="Alfonso Chicoma - Fullstack developer">
    <BioArticle
        idBox="aboutMe"
        title="About me"
        parrafo="I'm passionate about technology, with a background in SMR and ASIR. During my studies, I gained experience in network systems administration, but over time, I found my true calling in front-end development. I've worked with technologies like JavaScript, TypeScript, React.js, and Astro, and I love constantly learning and improving my skills in this area."
    >
        <Image
            slot='extraAfter'
            src={BioAvatar}
            width="400"
            height="400"
            class='bio-avatar bio-avatar-before'
            alt="Una descripción de mi imagen."
            decoding="async"
            loading="lazy"
            draggable="false"
        />
        <Image
            slot='svg'
            src={svgBio}
            width="100"
            height="100"
            class='bio-avatar bio-avatar-before'
            alt="Una descripción de mi imagen."
            decoding="async"
            loading="lazy"
            draggable="false"
        />
        
        
    </BioArticle>

    <BioArticle
        idBox="objetive"
        title="Objetive"
        parrafo="My goal is to delve deeper into the various front-end development languages while continuing to expand my knowledge in back-end languages. I want to understand the fundamentals of both and then refine my skills in each. Additionally, I have a strong ability to understand and adapt to client needs, always keeping up to date with the latest trends and best practices in the industry."
    >
        <Image
            slot='extraBefore'
            src={objetiveAvatar}
            width="400"
            height="400"
            class='bio-avatar'
            alt="Una descripción de mi imagen."
            decoding="async"
            loading="lazy"
            draggable="false"
        />
        <svg
            slot="svg"
            class="icon icon-tabler icon-tabler-target-arrow"
            width="50"
            height="50"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="#ffffe3"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" />
            <path d="M12 7a5 5 0 1 0 5 5" />
            <path d="M13 3.055a9 9 0 1 0 7.941 7.945" />
            <path d="M15 6v3h3l3 -3h-3v-3z" />
            <path d="M15 9l-3 3" />
        </svg>
    </BioArticle>

    <DynamicContent client:visible />
</Layout>

<style>
    .main-content {
        height: 100%;
        row-gap: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        align-content: center;
        flex-wrap: wrap;
    }

    nav {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        align-content: center;
        align-items: center;
        flex-wrap: wrap;
        width: 100%;
    }
    .bio-avatar {
        border-radius: 50%;
        view-timeline-name: --revealing-image;
        view-timeline-axis: block;
        animation: linear reveal both;
        animation-timeline: --revealing-image;
        animation-range: entry 25% cover 40%;
    }
    .cronological-content {
        display: flex;
        flex-direction: row;
        width: 100%;
        align-items: center;
        justify-content: space-evenly;
        align-content: center;
        flex-wrap: wrap;
        position: relative;
    }
    .cronological-content div {
        display: flex;
        flex-direction: column;
    }
    img {
        object-fit: cover;
    }
    @keyframes reveal {
        from {
            opacity: 0;
            clip-path: inset(80% 20% 45% 20%);
        }
        to {
            opacity: 1;
            clip-path: inset(0% 0% 0% 0%);
        }
    }
</style>